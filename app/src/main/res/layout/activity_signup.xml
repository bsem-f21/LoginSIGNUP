<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/supLOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/superior"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/supLOGO"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_person_2_24"
        android:hint="Username"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#191E1E" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_attach_email_24"
        android:hint=" Email"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#191E1E" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_info_24"
        android:hint=" Password"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#191E1E" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_info_24"
        android:hint=" ReEnter Password"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#191E1E" />

    <Button
        android:id="@+id/SignupBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/repassword"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SignupBTN"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="or signup with"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/fb"
            android:padding="15dp"/>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/google"
            android:padding="15dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/twitter"
            android:padding="15dp"/>


    </LinearLayout>




</RelativeLayout>